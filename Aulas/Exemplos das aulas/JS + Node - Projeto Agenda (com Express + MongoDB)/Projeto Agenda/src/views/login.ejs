<%- include('includes/head') %>
<%- include('includes/nav') %>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">

                <h1 class="text-center">Crir conta ou Entrar</h1>
                <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

                <%- include('includes/messages') %>

                <div class="row">
                    
                    <div class="col-lg my-5">
                        <h4>Faça seu cadastro</h4>
                        <p>Se ainda não possui uma conta, preencha o formulario abaixo</p>

                        <form class="form-cadastro" action="/login/register" method="post">
                            <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                            <div class="form-group">
                              <label>E-mail</label>
                              <input type="email" class="form-control mb-3" name="email">
                            </div>
                            <div class="form-group">
                              <label>Senha</label>
                              <input type="password" class="form-control mb-3" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary">Criar conta</button>
                        </form>

                    </div>
                    <div class="col-lg my-5">
                        <h4>Fazer login</h4>
                        <p class="mb-4">Se você já possui uma conta, faça login abaixo</p>

                        <form class="form-login" action="/login/login" method="post">
                            <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                            <div class="form-group">
                              <label>E-mail</label>
                              <input type="email" class="form-control mb-3" name="email">
                            </div>
                            <div class="form-group">
                              <label>Senha</label>
                              <input type="password" class="form-control mb-3" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary">Entrar</button>
                          </form>
                    </div>

                </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include('includes/footer') %>